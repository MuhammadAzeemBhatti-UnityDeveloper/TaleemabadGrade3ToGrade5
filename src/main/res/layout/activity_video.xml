<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_panel_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_panel_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_panel_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/video_controller_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/video_controller_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <com.devbrackets.android.exomedia.ui.widget.VideoView
        android:id="@+id/dm_player_web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ebeff2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/videoActivityToplayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/videoscreen_leftbar"
        app:layout_constraintBottom_toBottomOf="@id/left_panel_bottom_guideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/left_panel_right_guideline"
        app:layout_constraintTop_toTopOf="@id/left_panel_top_guideline"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_panel_home_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_panel_satpin_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_panel_download_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_panel_share_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_panel_language_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_panel_inside_left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="44dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_panel_inside_right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.7" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_panel_inside_top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:scaleType="fitStart"
            android:src="@drawable/home_btn"
            app:layout_constraintBottom_toBottomOf="@id/left_panel_home_guideline"
            app:layout_constraintLeft_toLeftOf="@id/left_panel_inside_left_guideline"
            app:layout_constraintRight_toRightOf="@id/left_panel_inside_right_guideline"
            app:layout_constraintTop_toTopOf="@id/left_panel_inside_top_guideline" />

        <ImageButton
            android:id="@+id/btnSatpin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:scaleType="fitStart"
            android:src="@drawable/satpin_btn"
            app:layout_constraintBottom_toBottomOf="@id/left_panel_satpin_guideline"
            app:layout_constraintLeft_toLeftOf="@id/left_panel_inside_left_guideline"
            app:layout_constraintRight_toRightOf="@id/left_panel_inside_right_guideline"
            app:layout_constraintTop_toTopOf="@id/left_panel_home_guideline" />


        <ImageButton
            android:id="@+id/btnDownload"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:scaleType="fitStart"
            android:src="@drawable/download_btn"
            app:layout_constraintBottom_toBottomOf="@id/left_panel_download_guideline"
            app:layout_constraintLeft_toLeftOf="@id/left_panel_inside_left_guideline"
            app:layout_constraintRight_toRightOf="@id/left_panel_inside_right_guideline"
            app:layout_constraintTop_toTopOf="@id/left_panel_satpin_guideline" />

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/videodownloadprogress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cpb_background_progressbar_color="#00ffffff"
            app:cpb_background_progressbar_width="5dp"
            app:cpb_progress="0"
            app:cpb_progressbar_color="#11cc01"
            app:cpb_progressbar_width="5dp"
            app:layout_constraintBottom_toBottomOf="@id/left_panel_download_guideline"
            app:layout_constraintLeft_toLeftOf="@id/left_panel_inside_left_guideline"
            app:layout_constraintRight_toRightOf="@id/left_panel_inside_right_guideline"
            app:layout_constraintTop_toTopOf="@id/left_panel_satpin_guideline" />

        <ImageButton
            android:id="@+id/btnShare"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:scaleType="fitStart"
            android:src="@drawable/share_button"
            app:layout_constraintBottom_toBottomOf="@id/left_panel_share_guideline"
            app:layout_constraintLeft_toLeftOf="@id/left_panel_inside_left_guideline"
            app:layout_constraintRight_toRightOf="@id/left_panel_inside_right_guideline"
            app:layout_constraintTop_toTopOf="@id/left_panel_download_guideline" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/languagetogglelayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/left_panel_language_guideline"
            app:layout_constraintLeft_toLeftOf="@id/left_panel_inside_left_guideline"
            app:layout_constraintRight_toRightOf="@id/left_panel_inside_right_guideline"
            app:layout_constraintTop_toTopOf="@id/left_panel_share_guideline">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_panel_language_center_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"
                />

            <ImageView
                android:id="@+id/toggleBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"
                android:src="@drawable/toggle_language_bg" />

            <ImageButton
                android:id="@+id/toggleEng"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@null"
                android:scaleType="fitEnd"
                android:src="@drawable/toggle_eng_off"
                app:layout_constraintBottom_toBottomOf="@+id/toggleBackground"
                app:layout_constraintLeft_toLeftOf="@+id/toggleBackground"
                app:layout_constraintRight_toLeftOf="@+id/left_panel_language_center_guideline"
                app:layout_constraintTop_toTopOf="@+id/toggleBackground" />

            <ImageButton
                android:id="@+id/toggleUrdu"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@null"
                android:scaleType="fitEnd"
                android:src="@drawable/toggle_urdu_off"
                app:layout_constraintBottom_toBottomOf="@+id/toggleBackground"
                app:layout_constraintLeft_toRightOf="@+id/left_panel_language_center_guideline"
                app:layout_constraintRight_toRightOf="@+id/toggleBackground"
                app:layout_constraintTop_toTopOf="@+id/toggleBackground" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/alphaImg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/testpic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/playBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/green_play_btn"
        app:layout_constraintBottom_toBottomOf="@+id/left_panel_bottom_guideline"
        app:layout_constraintLeft_toLeftOf="@+id/video_controller_left_guideline" />

    <SeekBar
        android:id="@+id/video_seekbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:max="100"
        android:progress="0"
        android:progressTint="#ffffff"
        android:thumbTint="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/playBtn"
        app:layout_constraintLeft_toRightOf="@+id/playBtn"
        app:layout_constraintRight_toRightOf="@+id/video_controller_right_guideline"
        app:layout_constraintTop_toTopOf="@+id/playBtn" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/videoActivityProblemLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/video_controller_right_guideline"
        app:layout_constraintBottom_toTopOf="@+id/left_panel_bottom_guideline"
        app:layout_constraintTop_toBottomOf="@+id/left_panel_top_guideline">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_panel_inside_left_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="64dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_panel_inside_right_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_panel_home_guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <ImageButton
            android:id="@+id/problemBtn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:scaleType="fitStart"
            android:src="@drawable/reportvideo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/left_panel_home_guideline1"
            app:layout_constraintRight_toRightOf="@id/left_panel_inside_right_guideline1"
            app:layout_constraintLeft_toLeftOf="@+id/left_panel_inside_left_guideline1" />
        <!--<ImageButton
            android:id="@+id/shareBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:scaleType="fitStart"
            android:src="@drawable/reportvideo"
            app:layout_constraintTop_toBottomOf="@+id/problemBtn"
            app:layout_constraintRight_toRightOf="@id/left_panel_inside_right_guideline1"
            app:layout_constraintLeft_toLeftOf="@+id/left_panel_inside_left_guideline1" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

